.main {
    background: #fafafa;
}

text {
    font-size: 24rpx;
    color: #898989;
}

.index_hd {
    position: absolute;
    height: 56rpx;
    width: 100%;
    top: 14rpx;
    margin: 0 32rpx;
    z-index: 999;
}

.index_hd view {
    display: inline-block;
}

.logo image {
    width: 148rpx;
    height: 51rpx;
}

.index_hd .search-box {
    margin-left: 34rpx;
    width: 514rpx;
    height: 51rpx;
    text-align: center;
}

.index_hd .search-box input {
    border-radius: 50rpx;
    background: rgba(248, 248, 248, 0.4);
    font-size: 20rpx;
}

.index_bd {
    width: 100%;
    height: 798rpx;
    position: relative;
}

.publicity_photo {
    height: 798rpx;
    width: 100%;
    overflow: hidden;
}

.publicity_photo image {
    height: 100%;
    width: 100%;
}


