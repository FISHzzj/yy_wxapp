.movie-info {
    width: 691rpx;
    height: 300rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 999;
    background-color: #fff;
    border-radius: 15rpx;
    box-sizing: border-box;
    box-shadow: 1px 1px 8px #f3f3f3;
}

.movie-info swiper {
    width: 100%;
    height: 100%;
    /* margin-left: 42rpx; */
}

.movie-info swiper-item {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.movie-photo {
    width: 222rpx;
    height: 201rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.movie-photo image {
    width: 151rpx;
    height: 100%;
    margin-left: 42rpx;
}

.movie-txt {
    /* margin-left: 42rpx; */
    height: 201rpx;
    width: 413rpx;
}

.movie-txt text {
    display: inline-block;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.movie-txt text:not(:last-child) {
    margin-bottom: 13rpx;
}

.movie-txt .title.movie-title {
    display: block;
    font-size: 35rpx;
    font-weight: 800;
    color: #000;
}

.movie-txt .update,
.movie-txt .actor,
.movie-txt .desc {
    display: block;
}

.teleplay-list {
    background: inherit;
    display: flex;
    flex-direction: row;
}

.list-head {
    padding: 30rpx 20rpx 22rpx;
    display: flex;
    align-items: center;
}

.slogan {
    color: #000;
    margin-left: 21rpx;
}

.list-head navigator {
    position: absolute;
    right: 0;
    font-size: 24rpx;
    color: #898989;
}

.list-head navigator>text,
.list-head navigator>view {
    color: #616161;
    display: inline;
    margin-right: 15rpx;
}

.movie-containers {
    display: flex;
    flex-wrap: wrap;
}

.movie-container {
    margin-bottom: 65rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.movie-container image {
    width: 251rpx;
    height: 330rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    border: 1px solid #fff;
}

.movie-container>.update {
    font-size: 18rpx;
    color: #fff;
    background: transparent;
    position: absolute;
    right: 30rpx;
    bottom: 65rpx;
}

.movie-container>.title {
    color: #000;
}