<view class="search-box">
    <image src="../../images/icon-search-gray.png" class="search-icon"></image>
    <input type="text" value='{{searchVal}}' bindconfirm="search" bindinput="bindKeyInput"></input>
    <view class="cancel-box" wx:if="{{ searchVal == '' }}">
        <text bindtap='cancel'>取消</text>
    </view>
    <view class='clear-box' wx:if="{{ searchVal != '' }}">
        <image src="../../images/icon-close.png" class="clear-icon" bindtap="clear"></image>
        <text bindtap="resultPage">搜索</text>
    </view>
</view>

<view class="history-box">
    <view class="weui-cells">
        <view class="weui-cell">
            <view class="weui-cell__bd ">
                <text class="history-title">搜索历史</text>
            </view>
            <view class="weui-cell__ft">
                <text class="clear">清空历史</text>
            </view>
        </view>
    </view>
</view>
<view class="hot-box">
    <view class="weui-cells">
        <view class="weui-cell">
            <view class="weui-cell__bd ">
                <text class="hot-title">热门搜索</text>
            </view>
        </view>
        <view class="weui-cell">
            <view class="hot-search">
                <ul>
                    <li>
                        <text class="no1">1</text>
                        <text>奔跑吧兄弟</text>
                    </li>
                    <li>
                        <text class="no2">2</text>
                        <text>热血街舞团</text>
                    </li>
                    <li>
                        <text class="no3">3</text>
                        <text>小猪佩奇</text>
                    </li>
                    <li>
                        <text>4</text>
                        <text>泡沫之夏</text>
                    </li>
                    <li>
                        <text>5</text>
                        <text>汪汪队立大功</text>
                    </li>
                    <li>
                        <text>6</text>
                        <text>奥特曼</text>
                    </li>
                </ul>
            </view>
        </view>
    </view>
</view>

<block wx:if="{{result.length!=0}}">
    <view class="search-list-box">
        <ul class="search-list" wx:for="{{result}}">
            <li class="search-result" bindtap="clickResult" data-num="{{index}}">{{item.title}}</li>
        </ul>
    </view>
</block>