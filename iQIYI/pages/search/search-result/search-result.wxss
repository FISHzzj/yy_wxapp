page {
    font-size: 24rpx;
}

.noneresult {
    text-align: center;
    font-size: 35rpx;
}

.search-box {
    height: 104rpx;
    /* margin-top: 18rpx; */
    display: flex;
    line-height: 104rpx;
    vertical-align: middle;
    border-bottom: 2px solid #f0f0f0;
}

.search-box input {
    /* box-sizing: border-box; */
    width: 85%;
    /* margin-top: 18rpx; */
    background-color: #f0f0f0;
    border-radius: 50rpx;
    margin: auto;
    text-align: left;
    /* background-image: url(../../images/icon-search-gray.png);
    background-size: 31rpx 31rpx; */
    padding-left: 65rpx;
}

.search-box image {
    position: absolute;
    z-index: 99;
    top: 38rpx;
}

.search-box image.search-icon {
    height: 31rpx;
    width: 31rpx;
    left: 47rpx;
}

.search-box text {
    display: inline-block;
    flex: 1;
    text-align: center;
    vertical-align: middle;
}

.media-box {
    box-sizing: border-box;
    height: 621rpx;
    border-bottom: 2px solid #f0f0f0;
    height: 100%;
    margin: 0 21rpx;
}

.media-box {
    /* display: flex;
    flex-direction: row;
    justify-content: center; */
}

.media-pic,
.media-desc {
    padding-top: 43rpx;
}

.media-pic {
    width: 231rpx;
    height: 306rpx;
    display: inline-block;
    padding-right: 15rpx;
}

.media-pic image {
    width: 100%;
    height: 100%;
}

.media-desc {
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    width: 65%;
    height: 306rpx;
    position: relative;
}

.media-desc .title {
    font-size: 26rpx;
    color: #000;
    font-weight: 800;
}

.media-desc .desc {
    font-size: 22rpx;
    color: #5d5d5d;
}

.media-desc .desc text {
    display: block;
}

.media-desc .play {
    width: 192rpx;
    height: 69rpx;
    border-radius: 50rpx;
    font-size: 26rpx;
    position: absolute;
    bottom: 0;
}

.media-num-box {
    display: block;
}

.media-num {
    width: 130rpx;
    height: 110rpx;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    background: #f5f5f5;
    margin-left: 15rpx;
    line-height: 110rpx;
    margin-top: 43rpx;
    margin-bottom: 43rpx
}

.media-num text {
    font-weight: 800;
    display: inline-block;
    width: 100%;
    height: 100%;
}

.media-num:first-child {
    margin-left: 0;
}