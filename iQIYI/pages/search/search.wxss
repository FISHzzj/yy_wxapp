page {
    font-size: 24rpx;
}

.search-box {
    height: 104rpx;
    /* margin-top: 18rpx; */
    display: flex;
    line-height: 104rpx;
    vertical-align: middle;
    border-bottom: 2px solid #f0f0f0;
}

.search-box input {
    /* box-sizing: border-box; */
    width: 70%;
    /* margin-top: 18rpx; */
    background-color: #f0f0f0;
    border-radius: 50rpx;
    margin: auto 0 auto 19rpx;
    text-align: left;
    /* background-image: url(../../images/icon-search-gray.png);
    background-size: 31rpx 31rpx; */
    padding-left: 65rpx;
}

.search-box image {
    position: absolute;
    z-index: 99;
    top: 38rpx;
}

.search-box image.search-icon {
    height: 31rpx;
    width: 31rpx;
    left: 47rpx;
}

.search-box text {
    display: inline-block;
    flex: 1;
    text-align: center;
    vertical-align: middle;
}

.history-box .history-title,
.hot-box .hot-title {
    font-weight: 600;
}

.history-box .clear {
    color: #fd7c79;
}

.hot-box .hot-search ul {
    width: 100%;
}

.hot-box .hot-search ul li {
    display: inline-block;
    width: 50%;
    margin-top: 52rpx;
    line-height: 24rpx;
}

.hot-box .hot-search ul li text:first-child {
    margin-right: 14px;
    content: '1';
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    background-color: #d9d9d9;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
}

.hot-box .hot-search ul li text.no1 {
    background: #ff443f;
}

.hot-box .hot-search ul li text.no2 {
    background: #ff903b;
}

.hot-box .hot-search ul li text.no3 {
    background: #ffc535;
}

.search-list-box {
    height: 100%;
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 999;
    margin-top: 107rpx;
}

.search-list-box ul.search-list {
    width: 100%;
}

.search-list-box ul.search-list li {
    display: block;
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    border-top: 1px solid #f0f0f0;
    margin-left: 31rpx;
}

.clear-icon {
    height: 32rpx;
    width: 32rpx;
    position: absolute;
    left: 560rpx;
}