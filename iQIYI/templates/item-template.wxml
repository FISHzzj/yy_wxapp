<template name="vedio-item">
        <view class="video-list">
            <view class="wrap-video">
                <view class="video-title">{{item.title}}</view>
                <video id="myVideo" src="{{item.vedio_url}}" danmu-list="{{danmuList}}" enable-danmu danmu-btn controls></video>
                <view class="btn"></view>
            </view>
            <view class="video-option">
                <view class="watch-num">
                    <i class="iconfont icon-yj"></i>
                    <text>{{item.watch_num}}</text>
                </view>
                <view class="share">
                    <i class="iconfont icon-fenxiang2"></i>
                    <text>分享</text>
                </view>
                <view class="like">
                    <i class="iconfont icon-aixin"></i>
                    <text>{{item.like_num}}</text>
                </view>
            </view>
        </view>

</template>